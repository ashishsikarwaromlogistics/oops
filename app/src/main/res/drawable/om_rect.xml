<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item  >
        <shape>
          <gradient
              android:startColor="#444A6F"
              android:centerColor="#ACB6F0"
              android:endColor="#942640D0"
              />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item
        android:top="1dp"
        android:left="2dp"
        android:bottom="1dp" android:right="2dp">
        <shape>
            <solid android:color="@android:color/black" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>