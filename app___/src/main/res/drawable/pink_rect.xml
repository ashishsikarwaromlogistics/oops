<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item  >
        <shape>
            <solid
                android:color="#ffffff"/>
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:bottom="1dp" android:right="1dp">
        <shape>
            <gradient
                android:startColor="#FADCE6"
                android:centerColor="#DB8DA7"
                android:endColor="#FBB3CC"
                android:type="sweep"

                />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>