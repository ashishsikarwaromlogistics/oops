<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <item android:bottom="300dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#E5F6FD" />
            </shape>
        </rotate>
    </item>
    <item android:top="150dp">
        <rotate
            android:fromDegrees="25"
            android:pivotX="100%"
            android:pivotY="45%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#FAF5F5" />
            </shape>
        </rotate>
    </item>
    <item android:top="100dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="60%"
            android:pivotY="45%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#F9FBF6" />
            </shape>
        </rotate>
    </item>
    <item android:top="100dp">
        <rotate
            android:fromDegrees="-25"
            android:pivotX="90%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/grey" />
            </shape>
        </rotate>
    </item>
    <item android:top="100dp">
        <rotate
            android:fromDegrees="-25"
            android:pivotX="90%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#E9FBFA" />
            </shape>
        </rotate>
    </item>
    <item android:top="200dp">
        <rotate
            android:fromDegrees="-35"
            android:pivotX="90%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#FBF8FF" />
            </shape>
        </rotate>
    </item>
    <item android:top="40dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="145%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#F1F2FD" />
            </shape>
        </rotate>
    </item>
</layer-list>