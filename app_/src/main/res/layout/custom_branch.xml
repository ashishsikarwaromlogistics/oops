<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect"
    android:clickable="true"
    app:cardCornerRadius="@dimen/_5sdp"
    >
<RelativeLayout
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect"
    android:clickable="true"

    >

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_3sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/profile_ic" />

    <TextView
        android:id="@+id/name"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnail"
        android:fontFamily="sans-serif-medium"
        android:text="DEEPAK SHARMA"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/city"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/thumbnail"
        android:layout_marginTop="5dp"
        android:text="INFORMATION TECHNOLOGY"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />
    <TextView
        android:id="@+id/contact_person"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/city"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/thumbnail"
        android:text="SR. MANAGER"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_person"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/thumbnail"
        android:text="882626262602"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <ImageView
        android:id="@+id/personal_phone"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_5sdp"
        app:srcCompat="@drawable/ic_call_primary" />

    <ImageView

        android:id="@+id/map"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/personal_phone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/_5sdp"
        android:src="@drawable/google" />

</RelativeLayout></androidx.cardview.widget.CardView>