<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TestActivity">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#EDEDED"
        tools:context=".MainActivity">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#000000">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Om SmartsOps"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_centerInParent="true" />

            <!-- Right side system information -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:24"
                    android:textColor="#FFFFFF"
                    android:paddingEnd="8dp"/>

                <ImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/signal_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Welcome text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR ASHISH SIKARWAR"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- Grid layout for buttons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:rowCount="4"
            android:columnCount="3"
            android:orientation="horizontal">

            <!-- Example of a grid button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CN Enquiry"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Repeat similar buttons for each grid item -->
            <!-- Add more buttons like this -->

        </GridLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.3 Â© 2024. Powered by OM Logistics Ltd."
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>